    (-1.8 5 -0.5)   //3

    (-1.8 -5 0.5)  //4
    (1.8 -5 0.5)   //5
    (1.8 5 0.5)   //6
    (-1.8 5 0.5)    //7
);

blocks
(
 hex (0 1 2 3 4 5 6 7) (360 1000 1) simpleGrading (1 1 1)
);

